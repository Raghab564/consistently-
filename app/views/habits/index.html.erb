<!-- Main Content -->
<div class="max-w-3xl mx-auto py-8">
  <h1 class="text-3xl font-semibold mb-6 text-center">Your Habits</h1>

  <div class="mb-4 text-right">
    <%= link_to "Home", root_path, class: "inline-block px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600" %>
    <%= link_to "Create New Habit", new_habit_path, class: "inline-block px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600" %>
  </div>

  <% if @habits.any? %>
    <div class="grid gap-4">
      <% @habits.each do |habit| %>
        <div class="p-4 bg-white rounded-lg shadow hover:shadow-lg transition">
          <h2 class="text-xl font-bold"><%= habit.name %></h2>
          <p class="text-gray-600 mt-2"><%= habit.description %></p>
          <div class="mt-4 flex space-x-2">
            <%= link_to "Show", habit_path(habit), class: "px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 text-sm" %>
            <%= link_to "Edit", edit_habit_path(habit), class: "px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 text-sm" %>
            <%= button_to "Delete", habit_path(habit), method: :delete, data: { confirm: "Are you sure?" }, class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-600">You have no habits yet. Start by creating one!</p>
  <% end %>
</div>
