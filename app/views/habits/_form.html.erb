<%= form_with(model: habit, local: true, class: "space-y-4") do |f| %>
  <% if habit.errors.any? %>
    <div class="bg-red-100 text-red-700 p-3 rounded">
      <p><strong><%= pluralize(habit.errors.count, "error") %> prohibited this habit from being saved:</strong></p>
      <ul class="list-disc list-inside mt-2">
        <% habit.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "w-full mt-1 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-50" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "w-full mt-1 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-50" %>
  </div>

  <div>
    <%= f.submit class: "w-full py-2 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-600 transition" %>
  </div>
<% end %>
